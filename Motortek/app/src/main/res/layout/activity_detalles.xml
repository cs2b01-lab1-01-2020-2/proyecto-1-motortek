                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:padding="20dp"
                    android:text="01/12/20"
                    android:background="@color/white"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:visibility="visible"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:padding="20dp"
                    android:text="Completado en 1 semana"
                    android:background="@color/white"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:visibility="visible"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:padding="20dp"
                    android:text="Costo: 200 S/."
                    android:background="@color/white"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:visibility="visible"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:padding="20dp"
                    android:text="Metodo de pago: Efectivo"
                    android:background="@color/white"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:visibility="visible"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:padding="20dp"
                    android:text="DescripciÃ³n:\n\nSe realizo un planchado simple y se aplico pintura al planchado para que tenga un acabado perfecto."
                    android:background="@color/white"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:visibility="visible"
                    android:background="@android:color/darker_gray"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:padding="20dp"
                    android:text="Atendido por: Victor Ramirez"
                    android:background="@color/white"/>
                <View
                    android:layout_width="fill_parent"
                    android:layout_height="2dp"
                    android:visibility="visible"
                    android:background="@android:color/darker_gray"/>

            </LinearLayout>
            <Button
                android:id="@+id/atras"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:text="@string/volver"
                android:textAppearance="?android:textAppearanceMedium"
                android:onClick="back"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="34sp"
                android:backgroundTint="@color/black"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="100dp"
                android:layout_gravity="center_horizontal"
                android:foregroundGravity="bottom"/>


        </LinearLayout>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>